{
  "name": "where-app",
  "version": "0.2.0",
  "description": "A playground for group self-awareness",
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "main": "out-tsc/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightningrodlabs/where.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "devtest": "tsc && electron .",
    "dist:build": "electron-builder build",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux tar.gz",
    "dist:linux-app": "electron-builder --linux AppImage"
  },
  "build": {
    "productName": "Where",
    "afterSign": "afterSignHook.js",
    "appId": "com.harris-braun.where",
    "copyright": "Â© 2021-2023 Harris-Braun Enterprises, LLC",
    "asar": false,
    "files": [
      "out-tsc/**/*",
      "web/**/*",
      "bin/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "web/logo",
      "output": "out-builder"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "NSIS",
      "icon": "web/logo/icon.ico",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "@types/electron-prompt": "^1.6.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "cross-env": "^7.0.3",
    "electron": "19.0.0",
    "electron-builder": "23.6.0"
  },
  "dependencies": {
    "@lightningrodlabs/electron-holochain": "0.6.1",
    "electron-prompt": "^1.7.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "1.1.1",
    "electron-osx-sign": "0.4.14",
    "fix-path": "^2.1.0",
    "tslib": "^2.4.0"
  }
}
