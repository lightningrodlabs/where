{
  "name": "where-app",
  "version": "0.1.0",
  "description": "A playground for group self-awareness",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightningrodlabs/where.git"
  },
  "main": "out-tsc/index.js",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "devtest": "tsc && electron .",
    "dist:build": "electron-builder build",
    "dist:linux": "electron-builder --linux tar.gz",
    "dist:linux-app": "electron-builder --linux AppImage"
  },
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "build": {
    "productName": "Where",
    "afterSign": "./afterSignHook.js",
    "appId": "com.harris-braun.where",
    "copyright": "Â© 2021-2022 Harris-Braun Enterprises, LLC",
    "asar": false,
    "files": [
      "out-tsc/**/*",
      "web/**/*",
      "bin/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "NSIS",
      "icon": "web/logo/icon.ico",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "directories": {
      "buildResources": "web/logo",
      "output": "out-builder"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "@types/electron-prompt": "^1.6.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",    
    "electron": "19.0.0",
    "electron-builder": "22.14.13",
    "electron-notarize": "^1.0.0",
    "eslint": "^8.24.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@lightningrodlabs/electron-holochain": "0.3.0",
    "command-exists": "^1.2.8",
    "electron-prompt": "^1.7.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.1.1",
    "tslib": "^2.3.1"
  }
}
